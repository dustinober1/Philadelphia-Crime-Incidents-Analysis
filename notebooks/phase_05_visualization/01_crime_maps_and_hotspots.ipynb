    "print(\"GEOSPATIAL VISUALIZATION COMPLETE\")\n",
    "print(\"=\"*60)\n",
    "print(f\"\\n✓ Generated maps:\")\n",
    "print(f\"  - Heatmap: {heatmap_file}\")\n",
    "print(f\"  - Recent incidents: {markers_file}\")\n",
    "print(f\"\\nNext steps:\")\n",
    "print(f\"- Open generated HTML files in a web browser\")\n",
    "print(f\"- Explore interactive maps for patterns\")\n",
    "print(f\"- Proceed to trend dashboards in next notebook\")"
   ]
